.reviews {
  &__header {
    display: flex;
    align-items: center;
  }
  &__title {
    margin-right: 97px;
    color: white;
    font-size: 36px;
    font-weight: 700;
    line-height: 48px;
  }
  &__controls {
    display: flex;
    align-items: center;
  }
  &__prev-button {
    margin-right: 30px;
  }
  &__body {
    margin-top: 97px;
    width: 1000px;
    overflow: hidden;
  }
  &__list {
    display: flex;
    transition: transform 0.3s ease;
  }
  &__item {
    &:first-child {
      margin-right: 50px;
    }
  }
}
