.review-author {
  display: flex;
  &__avatar {
    width: 75px;
    height: 75px;
    margin-right: 31px;
    border-radius: 50%;
    overflow: hidden;
  }
  &__avatar-image {
    width: 100%;
    object-fit: contain;
    object-position: center center;
  }
  &__name {
    color: white;
    font-size: 18px;
    font-weight: 700;
    line-height: 42px;
  }
  &__position {
    opacity: 0.3;
    color: white;
    font-size: 16px;
    font-weight: 600;
    line-height: 26px;
  }
}
