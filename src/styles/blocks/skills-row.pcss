.skills-row {
  &__title {
    color: white;
    margin-bottom: 50px;
    font-size: 24px;
    font-weight: 700;
    @include desktop {
      margin-bottom: 30px;
      text-align: center;
      font-size: 18px;
    }
  }
  &__list {
    display: flex;
    flex-wrap: wrap;
  }
  &__item {
    &:not(:last-child) {
      margin-right: 3.5vw;
    }
  }
}
