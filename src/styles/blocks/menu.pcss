.menu {
  &__list {
    display: flex;
    align-items: center;
  }
  &__item {
    &:not(:last-child) {
      margin-right: 60px;

      @include desktop {
        margin-right: 5vw;
      }
    }
  }
  &__link {
    color: white;
    font-size: 16px;
    white-space: nowrap;
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s ease, color 0.2s ease;
    &:hover {
      opacity: 1;
      color: $accent-color;
    }
  }
}
