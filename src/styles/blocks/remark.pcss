.remark {
  position: relative;
  color: white;
  font-family: 'Open Sans';
  font-size: 16px;
  font-style: italic;
  line-height: 30px;
  opacity: 0.5;
  &::after {
    content: '*';
    position: absolute;
    top: 10px;
    left: -55px;
    color: #ff0000;
    font-size: 48px;
    font-style: italic;
    line-height: 30px;
    opacity: 0.1;
  }
}
